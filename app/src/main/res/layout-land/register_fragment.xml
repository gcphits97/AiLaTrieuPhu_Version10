<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkBlue"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_register"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/register_name"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:cursorVisible="true"
            android:hint="@string/register_name"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            tools:ignore="Autofill,TextFields" />

        <TextView
            android:id="@+id/txtLuuYTenDangNhapFormDangKy"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/padding_start_text"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/register_password"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:cursorVisible="true"
            android:hint="@string/register_password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/txtLuuYMatKhauFormDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_text"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/hoten"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edit_text"
            android:cursorVisible="true"
            android:hint="@string/hoten"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/txtLuuYHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_start_text"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="35dp"
                android:background="@drawable/primary_button"
                android:text="@string/dialog_register_button"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="35dp"
                android:background="@drawable/dark_button"
                android:text="@string/dialog_register_cancel_button"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:text="@string/text_cau_hoi_dang_nhap" />

            <TextView
                android:id="@+id/txtDangNhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_dang_nhap"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorRed" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>